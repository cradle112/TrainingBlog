<%= form_for(@article) do |f| %>
  <% @article.errors.full_messages.each do |message| %>
<div class="be-red white top-space">
  *<%= message %> </div>
<%end%>
<div class="field">
  <%= f.text_field :title, placeholder: "Title", class:"form-styla"%>
</div>
<div class="field">
  <%= f.text_area :body, placeholder: "Share your developer ideas.", style:"height:250px", class:"form-styla"%>
</div>
<div class="field">
  <%= f.submit "Share!", class:"btn be-red white"%>
</div>
<%end%>
